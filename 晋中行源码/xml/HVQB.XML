<?xml version="1.0" encoding="GBK" ?>

<TRANSACTION RIGHTS="11111111" TITLE="     自由格式明细"
  xmlns="http://www.otd.org/MENU" xmlns:W3CNS="http://www.w3c.org">

<!--12345678901234567890123456789012345678901234567890123456789012345678901234567890-->
<!--         1         2         3         4         5         6         7         8-->

<!--  注意：各个配置项的COL 属性最好是奇数, 这样可以避免出现乱码。                  -->
<!--        另外, 每个汉字的开始列号也最好是奇数, 每个字符串的长度也最好是偶数。    -->


<VARIABLE>

  <ITEM LINE="3"  COL="3" TYPE="%-52s" FUNCTIONS=
    "T(HVQB                          自由格式明细)"/>
<!--12345678901234567890123456789012345678901234567890123456789012345678901234567890-->
<!--         1         2         3         4         5         6         7         8-->
  <ITEM LINE="4"  COL="3"  TYPE="%-74s" FUNCTIONS=
    "T(─────────────────────────────────────)"/>

  <ITEM LINE="06"   COL="08"   TYPE="%-12s"   FUNCTIONS="T(委托日期:)"/>
  <ITEM LINE="07"   COL="08"   TYPE="%-12s"   FUNCTIONS="T(交易序号:)"/>
  <ITEM LINE="08"   COL="08"   TYPE="%-12s"   FUNCTIONS="T(交易状态:)"/>
  <ITEM LINE="09"   COL="08"   TYPE="%-12s"   FUNCTIONS="T(发起行行号:)"/>
  <ITEM LINE="10"   COL="08"   TYPE="%-12s"   FUNCTIONS="T(接收行行号:)"/>
 

  <ITEM LINE="6"  COL="20"  NAME="#TX_DATE"   TYPE="%-8s"   FUNCTIONS=""/>
  <ITEM LINE="7"  COL="20"  NAME="#ORDERNO"   TYPE="%-8s"   FUNCTIONS="V(NB)T($BUFFER,393,8)"/>
  <ITEM NAME="#TMP_TXSTAT"  TYPE="%-1s" FUNCTIONS="T($BUFFER,801,1)">
  <ONLOSTFOCUS>
  "{
	HV_SET_STAT();
   }"
   </ONLOSTFOCUS>
   </ITEM>
  <ITEM LINE="8"  COL="20"  NAME="#TXSTAT"   TYPE="%-8s"   FUNCTIONS=""/>

  <ITEM LINE="9"  COL="20"  NAME="#ORBRNO"    TYPE="%-12s"  FUNCTIONS="V(NB)T($BUFFER,19,12)"/>
  <ITEM LINE="10"  COL="20"  NAME="#ACBRNO"   TYPE="%-12s"  FUNCTIONS="V(NB)T($BUFFER,211,12)"/>
  <ITEM NAME="#INITLIST" TYPE="%-1s" FUNCTIONS="">
  <ONLOSTFOCUS>"{
  	dim @reason as string;
  	@reason=substr($BUFFER,539,255);
	@reason = delspace(@reason);
  	if(#INITLIST==''){
  		list_init(6,50,11,8);
		list_loadtext('信息内容',@reason);
  		#INITLIST='1';
  		list_show();
  	}else{
  		list_work();
  	}
  }"
  </ONLOSTFOCUS>
  </ITEM>
   
  <ITEM LINE="17"  COL="67" NAME="#CLOSE"    INPUT="BUTTON" TYPE="%-6s" FUNCTIONS="T(确 定)">
  <ONCLICK>"{
  	close();
  }"
  </ONCLICK>
  </ITEM>
</VARIABLE>

</TRANSACTION>
