  <ITEM LINE="3"  COL="3" TYPE="%-52s" FUNCTIONS=
    "T(HVQ9                          大额查询明细)"/>
  <ITEM LINE="4"  COL="3"  TYPE="%-74s" FUNCTIONS=
    "T(─────────────────────────────────────)"/>
  <ITEM LINE="06"  COL="08"  TYPE="%-12s"  FUNCTIONS="T(查询日期:)"/>
  <ITEM LINE="07"  COL="08"  TYPE="%-12s"  FUNCTIONS="T(查询序号:)"/>
  <ITEM LINE="08"  COL="08"  TYPE="%-12s"  FUNCTIONS="T(查询行号:)"/>
  <ITEM LINE="09"  COL="08"  TYPE="%-12s"  FUNCTIONS="T(查复行号:)"/>
  <ITEM LINE="10"  COL="08"  TYPE="%-12s"  FUNCTIONS="T(当前状态:)"/>

  <ITEM LINE="12"  COL="08"  TYPE="%-12s"  FUNCTIONS="T(原报文编号:)"/>
