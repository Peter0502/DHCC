<TRANSACTION RIGHTS="11110000" TITLE="6355   节假日查询维护"
xmlns="http://www.otd.org/MENU" xmlns:W3CNS="http://www.w3c.org">
<COMMSEND>
"{
    initfd();
    commsend_001();
    $FD92=#date_code;   //节假日代码    
    $FD87=#date_name;   //节假日名称
    $FD46=#beg_date;    //起始日期
    $FD47=#end_date;    //终止日期
    $FD67=#type;        //是否生效 0:未生效 1:已生效
    $FD68=#do_type;
}"
</COMMSEND>
<COMMRECV>
"{
    commrecv_001();
}"
</COMMRECV>
 <VARIABLE>
<ITEM LINE="3"  COL="3" TYPE="%-70s" FUNCTIONS=
"T(6355                         节假日查询维护)"/>

<ITEM LINE="4"  COL="3"  TYPE="%-70s" FUNCTIONS=
"T(───────────────────────────────────)"/>

<ITEM NAME="#TXNO" TYPE="%-4s" FUNCTIONS="T($TXNO=6352)"/>
<ITEM NAME="#MSGTYPE" TYPE="%-5s" FUNCTIONS="T($MSGTYPE=03001)"/>

<ITEM LINE="06"  COL="17" TYPE="%-9s"    FUNCTIONS="T(操作类型:)"/>
<ITEM LINE="06"  COL="27"  NAME="#do_type"  TYPE="%1s" DEVICE="KEYBOARD" FUNCTIONS="T(1)V(NB)">
<SELECT>
		<OPTION VALUE="1" TITLE="1.新 增"/>
		<OPTION VALUE="2" TITLE="2.修 改"/>
	</SELECT>
</ITEM>

<ITEM LINE="08"  COL="17" TYPE="%-9s"    FUNCTIONS="T(节日代码:)"/>
<ITEM LINE="10"  COL="17" TYPE="%-9s"    FUNCTIONS="T(节日名称:)"/>

<ITEM LINE="12"  COL="17" TYPE="%-9s"    FUNCTIONS="T(起始日期:)"/>
<ITEM LINE="14"  COL="17" TYPE="%-9s"    FUNCTIONS="T(终止日期:)"/>

<ITEM LINE="16"  COL="17" TYPE="%-9s"    FUNCTIONS="T(是否生效:)"/>
   

<ITEM LINE="08"  COL="27" NAME="#date_code" TYPE="%-3s"  DEVICE="KEYBOARD" FUNCTIONS="T()V(NB)"/>
<ITEM LINE="10"  COL="27" NAME="#date_name" TYPE="%-10s" DEVICE="KEYBOARD" FUNCTIONS="T()V(NB)"/>

<ITEM LINE="12"  COL="27" NAME="#beg_date"  TYPE="%8d"   DEVICE="KEYBOARD" FUNCTIONS="T()D()V(NB)"/>
<ITEM LINE="14"  COL="27" NAME="#end_date"  TYPE="%8d"   DEVICE="KEYBOARD" FUNCTIONS="T()D()V(NB)">
<ONLOSTFOCUS>
"{
 if( #beg_date &gt; #end_date )
 {
   showmsg('到期日大于起始日期!');
   return(false);
 }
}"
</ONLOSTFOCUS>
</ITEM>

<ITEM LINE="16"  COL="27" NAME="#type"      TYPE="%1s"   DEVICE="KEYBOARD" FUNCTIONS="T()V(NB)">
   <!--  <ONLOSTFOCUS> XML文件错误  liuhj@dhcc 200811229 -->
   <SELECT>
                <OPTION VALUE="0" TITLE="0.未生效"/>
                <OPTION VALUE="1" TITLE="1.已生效"/>
   </SELECT>
  <!-- </ONLOSTFOCUS>  XML文件错误  liuhj@dhcc 200811229-->
</item>

<ITEM LINE="21"  COL="65" TYPE="%-6s" FUNCTIONS="T(确  定)" INPUT="SUBMIT"/>


</VARIABLE>

<REQUEST>        
</REQUEST>      
<RESPONSE>       
<PACKAGE DEVICE="SGREEN" DESC="节假日查询维护成功">
NOTHING
</PACKAGE>
	<PRINT>
	"{
	   if( #do_type == '2' )
    {
      print( 3,30,'节假日查询修改成功');
    }
    else
    {
      print( 3,30,'节假日查询新增成功');
    }
		
		print( 5,22,'节假日代码:[ 3]',#date_code);
		print( 6,22,'节假日名称:[10]',#date_name);
		print( 7,22,'起 始日 期:[ 8]',#beg_date);
		print( 8,22,'终 止日 期:[ 8]',#end_date);
		if( #type == '0')
		{
		print( 9,22,'是 否生 效:未生效');
		}
		else
		{
		print( 9,22,'是 否生 效:已生效');
		}
	}"
	</PRINT>         
</RESPONSE>      
</TRANSACTION> 
