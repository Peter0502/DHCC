<?xml version="1.0" encoding="GBK" ?>
<TRANSACTION RIGHTS="11111111" TITLE="1101    兑换"
  xmlns="http://www.otd.org/MENU" xmlns:W3CNS="http://www.w3c.org">
<COMMSEND>"{
	 commsend_001();
	 
}"
</COMMSEND>
<COMMRECV>"{
}"
</COMMRECV>

<VARIABLE>
  <ITEM LINE="3"  COL="3" TYPE="%-52s" FUNCTIONS=
    "T(1101                           兑换)"/>
  <ITEM LINE="4"  COL="3"  TYPE="%-74s" FUNCTIONS=
   "T(─────────────────────────────────────)"/>
  <ITEM NAME="#TXNO" TYPE="%-4s" FUNCTIONS="T($TXNO=7001)"/>
  <ITEM NAME="#MSGTYPE" TYPE="%-5s" FUNCTIONS="T($MSGTYPE=03001)"/>
  
  <ITEM LINE="7"   COL="5"   TYPE="%-10s" FUNCTIONS="T(买入币种:!)"/>
  <ITEM LINE="7"   COL="40"  TYPE="%-10s" FUNCTIONS="T(卖出币种:!)"/>
  <ITEM LINE="9"   COL="5"   TYPE="%-10s" FUNCTIONS="T(买入牌价:)" />
  <ITEM LINE="9"   COL="40"  TYPE="%-10s" FUNCTIONS="T(卖出牌价:)" />
  <ITEM LINE="11"  COL="5"   TYPE="%-10s" FUNCTIONS="T(输入金额:!)" />
  
  <ITEM LINE="13"  COL="5"   TYPE="%-10s" FUNCTIONS="T(买入金额:)"/>
  <ITEM LINE="13"  COL="40"   TYPE="%-10s" FUNCTIONS="T(卖出金额:)"/>
  
  <ITEM LINE="7" COL="16" NAME="#MINTYPE" TYPE="%2s" INPUT="SELECT" FUNCTIONS="T(01)">
		<SELECT>
			<OPTION VALUE ="01" TITLE="01.人民币" />
			<OPTION VALUE ="12" TITLE="12.英镑" />
			<OPTION VALUE ="13" TITLE="13.港币" />
			<OPTION VALUE ="14" TITLE="14.美元" />
			<OPTION VALUE ="15" TITLE="15.瑞士法郎" />
			<OPTION VALUE ="16" TITLE="16.德国马克" />
			<OPTION VALUE ="17" TITLE="17.法国法郎" />
			<OPTION VALUE ="26" TITLE="26.意大利里拉" />
			<OPTION VALUE ="27" TITLE="27.日元" />
			<OPTION VALUE ="28" TITLE="28.加元" />
			<OPTION VALUE ="29" TITLE="29.澳元" />
			<OPTION VALUE ="38" TITLE="38.欧元" />
		</SELECT>
  </ITEM>
  <ITEM LINE="7"   COL="51" NAME="#MOUTTYPE" TYPE="%-2s"   INPUT="SELECT"  FUNCTIONS="T(01)" >
   <SELECT>
			<OPTION VALUE ="01" TITLE="01.人民币" />
			<OPTION VALUE ="12" TITLE="12.英镑" />
			<OPTION VALUE ="13" TITLE="13.港币" />
			<OPTION VALUE ="14" TITLE="14.美元" />
			<OPTION VALUE ="15" TITLE="15.瑞士法郎" />
			<OPTION VALUE ="16" TITLE="16.德国马克" />
			<OPTION VALUE ="17" TITLE="17.法国法郎" />
			<OPTION VALUE ="26" TITLE="26.意大利里拉" />
			<OPTION VALUE ="27" TITLE="27.日元" />
			<OPTION VALUE ="28" TITLE="28.加元" />
			<OPTION VALUE ="29" TITLE="29.澳元" />
			<OPTION VALUE ="38" TITLE="38.欧元" />
		</SELECT>
  </ITEM>
  <ITEM LINE="9"   COL="16"  NAME="#INPRICE"     TYPE="%6.2f"   INPUT="TEXT"    FUNCTIONS="">
   <ONLOSTFOCUS>
		"{
		  if(#INPRICE==0)
		  {
		    showmsg('牌价等于0取当日牌价  否则以输入牌价为准');
		  }
		}"
	 </ONLOSTFOCUS>
	</ITEM>	
  <ITEM LINE="9"   COL="51"  NAME="#OUTPRICE"    TYPE="%6.2f"   INPUT="TEXT"    FUNCTIONS="">
    <ONLOSTFOCUS>
		"{
		  if(#OUTPRICE==0)
		  {
		    showmsg('牌价等于0取当日牌价  否则以输入牌价为准');
		  }
		}"
	 </ONLOSTFOCUS>
	</ITEM>	
  <ITEM LINE="11"  COL="16"  NAME="#INPUTTYPE"   TYPE="%1s"     INPUT="SELECT"  FUNCTIONS="T(1)G(#INPUTTYPE==2,#OUTAMT)">
    <SELECT>
       <OPTION VALUE ="1" TITLE="1.买入金额" />
       <OPTION VALUE ="2" TITLE="2.卖出金额" />
    </SELECT>
	</ITEM>
  <ITEM LINE="13" COL="16" NAME="#INAMT"  TYPE="%17.2f"  INPUT="TEXT"  FUNCTIONS="">
   <ONLOSTFOCUS>
		"{
		  dim @baktxno as string;
		  if(#INAMT==0)
		  {
		    showmsg('输入金额过低!');
		    return(false);
		  }
    	@baktxno=$TXNO;
    	$TXNO='9770';
    	$FD21=#MINTYPE;
    	$FD22=#MOUTTYPE;
    	$FD40=#INAMT;
    	$FD96='0'+space(59)+#OUTPRICE;
    	commsend_001();
    	
    	callserver(); 	
    	$TXNO=@baktxno;
    	
    	if($FD12!='0000'){
    		showmsg(geterror());
    		return(false);
    	}
    	#OUTPRICE=delspace($FD96);
    	#OUTAMT=val($FD41,0,01);
		}"
	 </ONLOSTFOCUS>
	</ITEM>	
  <ITEM LINE="13" COL="51" NAME="#OUTAMT" TYPE="%17.2f"  INPUT="TEXT"  FUNCTIONS="">
  <ONLOSTFOCUS>
		"{
		  dim @baktxno as string;
		  if(#OUTAMT==0)
		  {
		    showmsg('输入金额过低!');
		    return(false);
		  }
		  @baktxno=$TXNO;
    	$TXNO='9771';
    	$FD21=#MINTYPE;
    	$FD22=#MOUTTYPE;
    	$FD41=#OUTAMT;
    	$FD96='0'+space(59)+#OUTPRICE;
    	commsend_001();
    	
    	callserver(); 	
    	$TXNO=@baktxno;
    	
    	if($FD12!='0000'){
    		showmsg(geterror());
    		return(false);
    	}
    	#OUTPRICE=val($FD40,0,01);
		}"
	 </ONLOSTFOCUS>
	</ITEM>	
	 <!------------一些没有用的变量,只是为了公共脚本执行时不报错------------>
  <ITEM NAME="#PASSWD" TYPE="%-6s" FUNCTIONS="T()"/>
  <ITEM LINE="21"  COL="59" TYPE="%-6s" FUNCTIONS="T(确  定)" INPUT="SUBMIT"/>

</VARIABLE>
