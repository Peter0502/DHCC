	<PRINT>"{
	   if(#PROTYPE=='3')
	   {
	     print(3,30,'交易成功!');
	     print(5,20,'[50     ]',$FD13);
	   }
	}"
	</PRINT>
</RESPONSE>
<OUTPUT>
</OUTPUT>
</TRANSACTION>

