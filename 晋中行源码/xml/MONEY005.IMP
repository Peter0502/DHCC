  <ITEM LINE="15" COL="5" TYPE="%-10s" FUNCTIONS="T(  五分钞:)"/>
  <ITEM LINE="15" COL="15" TYPE="%-16s" INPUT="TEXT" NAME="#MONEY005" FUNCTIONS="T()">
  <ONGOTFOCUS>"{
	if(val(#MONEY005)==0){
		#MONEY005='';
	}else{
		#MONEY005=itoa(val(#MONEY005),'%.0f');
	}
	show(#MONEY005,true);
  }"
  </ONGOTFOCUS>
  <ONLOSTFOCUS>"{
	dim @id as number;
	dim @ch as string;
	dim @len as number;
	dim @balance as number;
	#MONEY005=delspace(#MONEY005);
	if(#MONEY005==''){
		#MONEY005=itoa(0,'%16.0f');
		show(#MONEY005,true);
		return(true);
	}
	@ch=substr(#MONEY005,0,1);
	if(@ch != '-' and (@ch &lt; '0' or @ch &gt; '9')){
		showmsg('输入数据第[1]位不合法,必须是数字或者负号');
		return(false);
	}
	@id=1;
	@len=len(#MONEY005);
	while(@id &lt; @len){
		@ch=substr(#MONEY005,@id,1);
		if(@ch != '-' and (@ch &lt; '0' or @ch &gt; '9')){
			showmsg('输入数据第['+itoa(@id+1,'%.0f')+']位不合法,必须是数字');
			return(false);
		}
		@id=@id+1;
	}
	#MONEY005=comma(itoa(val(#MONEY005),'%16.0f'),16);
	show(#MONEY005,true);
	count_cash();
	@balance = val(#ACBAL)-val(#TOTAL);
	#MBBAL   = comma(itoa(@balance,'%.2f'),16);
	show(#MBBAL,true);
	enable(#MBBAL,false);
  }"
  </ONLOSTFOCUS>
  </ITEM> 
