<?xml version="1.0" encoding="GBK" ?>
<TRANSACTION RIGHTS="00000000" TITLE="4205    存款确认"
  xmlns="http://www.otd.org/MENU" xmlns:W3CNS="http://www.w3c.org">
<COMMSEND>"{
	commsend_001();
}"
</COMMSEND>
<COMMRECV>"{
		commrecv_001();
}"
</COMMRECV>
<VARIABLE>
  <ITEM LINE="3"  COL="3" TYPE="%-44s" FUNCTIONS=
    "T(4205                            存款确认)"/>
  <ITEM LINE="4"  COL="3"  TYPE="%-74s" FUNCTIONS=
   "T(─────────────────────────────────────)"/>
  <ITEM NAME="#TXNO" TYPE="%-4s" FUNCTIONS="T($TXNO=2209)"/>
  <ITEM NAME="#MSGTYPE" TYPE="%-5s" FUNCTIONS="T($MSGTYPE=03001)"/>
  
  <!--输入变量-->
  
  <ITEM LINE="8" COL="12" TYPE="%-9s" FUNCTIONS="T(流水号:)"/>

  <ITEM LINE="10" COL="12" TYPE="%-60s"
  FUNCTIONS="T(-------------------------------------------)"/>

  <ITEM LINE="12" COL="12" TYPE="%-9s"  FUNCTIONS="T(存款帐号:)"/>
  <ITEM LINE="12" COL="47" TYPE="%-9s"  FUNCTIONS="T(帐号序号:)"/>
  <ITEM LINE="14" COL="12" TYPE="%-9s"  FUNCTIONS="T(存款金额:)"/>
  <ITEM LINE="16" COL="12" TYPE="%-9s"  FUNCTIONS="T(客户姓名:)"/>
  <ITEM LINE="18" COL="12" TYPE="%-13s" FUNCTIONS="T(存款确认状态:)"/>

  
  
 <ITEM NAME="#WSSRNO" INPUT="TEXT" LINE="8" COL="21" TYPE="%8d" FUNCTIONS="V(NB)">
<ONLOSTFOCUS>
"{
	initfd();
	commsend_001();
	$FD28 = #WSSRNO;
	$FD16 = '9908';
	callserver();
	if($FD12!='0000')
	{
		showmsg(geterror());
		return (false);
	}
		
	#ACTNO      =   $FD30;
	#ACTNOSEQN  =   $FD34;
	#AVL1       =   substr($FD40,0,14)+'.'+substr($FD40,14,2);
	//setitems('#AVL1',$FD40);
	#USERNAME   =   $FD25;
	#STS        =   $FD81;
}"
</ONLOSTFOCUS>
</ITEM>

  <ITEM NAME="#ACTNO"     INPUT="LABEL"  LINE="12" COL="21" TYPE="%-24s" FUNCTIONS=""/>
  <ITEM NAME="#ACTNOSEQN" INPUT="LABEL"  LINE="12" COL="56" TYPE="%-4s"  FUNCTIONS=""/>

  <ITEM NAME="#AVL1"    TYPE="%-17s"   FUNCTIONS=""/>
  <ITEM NAME="#BALANCE" INPUT="LABEL"  LINE="14" COL="21" TYPE="%-21s" FUNCTIONS="X(#AVL1)"/>

  <ITEM NAME="#USERNAME"   INPUT="LABEL"  LINE="16" COL="21" TYPE="%-50s" FUNCTIONS=""/>
  <ITEM NAME="#STS"        INPUT="LABEL"  LINE="18" COL="25" TYPE="%-50s" FUNCTIONS=""/>
  
 <ITEM NAME="#PASSWD" TYPE="%-6s" FUNCTIONS=""/>
  
   
  <!------------一些没有用的变量,只是为了公共脚本执行时不报错------------>
  <ITEM NAME="#CONFIRM"  LINE="21" COL="59"  TYPE="%-6s" FUNCTIONS="T(确  定)" INPUT="SUBMIT"/>
</VARIABLE>
<REQUEST>
</REQUEST>
<RESPONSE>
	<PACKAGE DEVICE="SCREEN" DESC="确认完毕">
	NOTHING
	</PACKAGE>
	<PRINT>"{
		print( 6,30,'交易成功');
		print( 8,22,'帐    号:[24]',#ACTNO);
		print(10,22,'存款金额:[21]',#BALANCE);
		print(12,22,'流 水 号:[ 8]',#WSSRNO);
		}"
	</PRINT>
</RESPONSE>
<RESPONSE>
	<PACKAGE DEVICE="PRINTER" DESC="请打印业务专用凭证">
	NOTHING
	</PACKAGE>
	<PRINT>"{
		print( 3,30,'[7      ]   [30]',$KINBR,$BRNAME);
		print( 4,30,'存款确认');
		print( 7,10,'帐    号:[24]',#ACTNO);
		print( 8,10,'存款金额:[21]',#BALANCE);
		print( 9,10,'客户姓名:[21]',#USERNAME);
		print(10,10,'流 水 号:[ 8]',#WSSRNO);
		print(11,10,'[4]',$TLRNO);
		print_sq();
		}"
	</PRINT>
</RESPONSE>
</TRANSACTION>
