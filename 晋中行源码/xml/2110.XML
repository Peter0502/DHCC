<VARIABLE>
  <ITEM LINE="3"  COL="3" TYPE="%-50s" FUNCTIONS=
    "T(2110                          客户授信额度录入)"/>
  <ITEM LINE="4"  COL="3"  TYPE="%-74s" FUNCTIONS=
   "T(─────────────────────────────────────)"/>
  <ITEM NAME="#TXNO" TYPE="%-4s" FUNCTIONS="T($TXNO=1110)"/>
  <ITEM NAME="#MSGTYPE" TYPE="%-5s" FUNCTIONS="T($MSGTYPE=03001)"/>
  <!--输入变量-->
  <ITEM LINE="7"  COL="20" TYPE="%-10s" FUNCTIONS="T(客 户 号:)"/>
  <ITEM LINE="9"  COL="20" TYPE="%-10s" FUNCTIONS="T(合 同 号:)"/>
  <ITEM LINE="11" COL="20" TYPE="%-10s" FUNCTIONS="T(币    种:!)"/>
  <ITEM LINE="13" COL="20" TYPE="%-10s" FUNCTIONS="T(授信金额:)"/>
  <ITEM LINE="15" COL="20" TYPE="%-10s" FUNCTIONS="T(循环使用:!)"/>
  <ITEM NAME="#CUSTNO" 		INPUT="TEXT" LINE="7"  COL="30" TYPE="%-8s"   FUNCTIONS="T()V(NB)"/>
  <ITEM NAME="#LOANNO" 		INPUT="TEXT" LINE="9"  COL="30" TYPE="%-16s"  FUNCTIONS="T()V(NB)"/>
  <ITEM NAME="#BZTYPE" 		INPUT="SELECT" LINE="11" COL="30" TYPE="%-2s"   FUNCTIONS="T(01)">
      	<SELECT>
		<OPTION VALUE="01" TITLE="0.人民币"/>
		<OPTION VALUE="12" TITLE="0.英镑"/>
		<OPTION VALUE="13" TITLE="0.港元"/>
		<OPTION VALUE="14" TITLE="0.美元"/>
		<OPTION VALUE="15" TITLE="0.瑞士法郎"/>
		<OPTION VALUE="27" TITLE="0.日元"/>
		<OPTION VALUE="28" TITLE="0.加元"/>
		<OPTION VALUE="29" TITLE="0.澳元"/>
		<OPTION VALUE="38" TITLE="0.欧元"/>	
	</SELECT>
  </ITEM>
  <ITEM NAME="#BZNAME"  TYPE="%-10s" FUNCTIONS="S(#BZTYPE,#BZTYPE)"/>
  <ITEM NAME="#TXAMT" 	INPUT="TEXT"   LINE="13" COL="30" TYPE="%16.2f"   FUNCTIONS="T()"/>



  <ITEM NAME="#XHTYPE" 	INPUT="SELECT" LINE="15" COL="30" TYPE="%-2s"  FUNCTIONS="T(N)">
      	<SELECT>
		<OPTION VALUE="N" TITLE="否"/>
		<OPTION VALUE="Y" TITLE="是"/>
	</SELECT>
  </ITEM>
  <ITEM NAME="#S_XHTYPE" TYPE="%-2s" FUNCTIONS="S(#XHTYPE,#XHTYPE)"/>
  <!--输出变量--->
  <!------------一些没有用的变量,只是为了公共脚本执行时不报错------------>
  <ITEM NAME="#PASSWD" TYPE="%-6s" FUNCTIONS="T()"/>
  <ITEM NAME="#SXR" TYPE="%-11s" FUNCTIONS=""/>
  <ITEM LINE="21" COL="59"  TYPE="%-6s" FUNCTIONS="T(确  定)" INPUT="SUBMIT"/>
