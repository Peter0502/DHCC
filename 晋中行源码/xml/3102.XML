<?xml version="1.0" encoding="GBK" ?>
<TRANSACTION RIGHTS="00000000" TITLE="3102 储蓄活期卡折开户"
  xmlns="http://www.otd.org/MENU" xmlns:W3CNS="http://www.w3c.org">
<COMMSEND>"{
	commsend_001();
	$FD103=#CPDM+space(30,' ')+#BZ+#ZHLX+space(1,' ')+#JXLX+space(16,' ')+#HM+#ZKH+space(10,' ')+#XZBZ+space(24,' ');
  $FD102=space(108,' ')+#JE+space(254,' ');
}"
</COMMSEND>
<COMMRECV>"{
		commrecv_001();
if($FD12!='0000'){
			return(false);}
    showmsg('交易成功!')}"
</COMMRECV>
<VARIABLE>
  <ITEM LINE="3"  COL="3" TYPE="%-44s" FUNCTIONS=
    "T(3102                        储蓄有介活期开户)"/>
  <ITEM LINE="4"  COL="3"  TYPE="%-74s" FUNCTIONS=
   "T(─────────────────────────────────────)"/>
  <ITEM NAME="#TXNO" TYPE="%-4s" FUNCTIONS="T($TXNO=2102)"/>
  <ITEM NAME="#MSGTYPE" TYPE="%-5s" FUNCTIONS="T($MSGTYPE=03001)"/>
  
  <!--输入变量-->


  <ITEM LINE="6" COL="12" TYPE="%-10s" FUNCTIONS="T(帐 卡 号:)"/>
  <ITEM NAME="#ZKH" INPUT="TEXT" LINE="6" COL="22" TYPE="%-19s" FUNCTIONS="">
	<ONLOSTFOCUS>
	"{	initfd();	
    commsend_001();
 		$FD16='9701';
		$FD103=space(104,' ')+#ZKH+space(35,' ');
		callserver();
		if($FD12!='0000'){
			showmsg(geterror());
			return(false);
		}
		//#HM=substr($FD103,54,50);户名长度是60 zgf 20140819
		#HM=substr($FD103,54,60);
		show(#HM,true);
		
	 }"
	</ONLOSTFOCUS>
  </ITEM>
  <ITEM LINE="7" COL="12" TYPE="%-9s" FUNCTIONS="T(户    名:)"/>
  <ITEM NAME="#HM" INPUT="TEXT" LINE="7" COL="22" TYPE="%-50s" FUNCTIONS=""/>
  <ITEM LINE="9"  COL="3" TYPE="%-74s" FUNCTIONS=
   "T(--------------------------------------------------------------------------)"/>
  <ITEM LINE="11" COL="12" TYPE="%-10s" FUNCTIONS="T(产品代码:!)"/>
  <ITEM NAME="#CPDM" INPUT="SELECT" LINE="11" COL="23" TYPE="%-3s" FUNCTIONS="T(101)">
  <SELECT>
		<OPTION VALUE="101" TITLE="储蓄人民币活期"/>
	</SELECT>
	
  <ONLOSTFOCUS>
 "{	initfd();	
    commsend_001();
 		$FD16='9844';
		$FD103=#CPDM+space(156,' ');
		callserver();
		if($FD12!='0000'){
			showmsg(geterror());
			return(false);
		}
		#BZ=substr($FD103,33,2);
		#ZHLX=substr($FD103,35,1);
		#JXLX=substr($FD103,37,1);
		#XZBZ=substr($FD103,54,1);
		show(#BZ,true);
		show(#ZHLX,true);
		show(#JXLX,true);
		show(#XZBZ,true);
		showblock('BLK1',true,true);
}"
 </ONLOSTFOCUS>
  </ITEM> 
  
  <BLOCK NAME="BLK1" LINE="13" COL="12" VISABLE="FALSE">
  	<ITEM LINE="0" COL="0" TYPE="%-10s" FUNCTIONS="T(币    种:!)"/>
  	<ITEM NAME="#BZ" LINE="0" COL="11" TYPE="%-2s" FUNCTIONS="">
  	<SELECT>
		<OPTION VALUE="01" TITLE="人民币"/>
	</SELECT>
  	</ITEM>
  	
  	<ITEM LINE="1" COL="0" TYPE="%-10s" FUNCTIONS="T(帐户类型:!)"/>
  <ITEM NAME="#ZHLX" INPUT="SELECT" LINE="1" COL="11" TYPE="%-1s" FUNCTIONS="">
  <SELECT>
		<OPTION VALUE="D" TITLE="个人结算户"/>
		<OPTION VALUE="S" TITLE="个人储蓄户"/>
	</SELECT>
  </ITEM>
  
  <ITEM LINE="2" COL="0" TYPE="%-10s" FUNCTIONS="T(计息类型:!)"/>
	<ITEM NAME="#JXLX" LINE="2" COL="11" TYPE="%-1s" FUNCTIONS="">
  <SELECT>
		<OPTION VALUE="4" TITLE="按季计息"/>
	</SELECT>
  </ITEM>
  
  <ITEM LINE="3" COL="0" TYPE="%-10s" FUNCTIONS="T(现转标志:!)"/>
  <ITEM NAME="#XZBZ" INPUT="SELECT" LINE="3" COL="11" TYPE="%-1s" FUNCTIONS="T(1)">
  <SELECT>
		<OPTION VALUE="1" TITLE="现金"/>
		<OPTION VALUE="2" TITLE="转帐"/>
	</SELECT>
  </ITEM>
  
  <ITEM LINE="5" COL="0" TYPE="%-10s" FUNCTIONS="T(金    额:)"/>
	<ITEM NAME="#JE" INPUT="TEXT" LINE="5" COL="11" TYPE="%17.2f" FUNCTIONS=""/>
   
   </BLOCK>
  <!------------一些没有用的变量,只是为了公共脚本执行时不报错------------>
  <ITEM NAME="#PASSWD" TYPE="%-6s" FUNCTIONS="T()"/>
  <ITEM LINE="21" COL="59"  TYPE="%-6s" FUNCTIONS="T(确  定)" INPUT="SUBMIT"/>
</VARIABLE>
<REQUEST>
</REQUEST>
<RESPONSE>
<PACKAGE DEVICE="SCREEN"  DESC="显示内容">
NOTHING
</PACKAGE>
<PRINT>
"{
	print(3,30,'储蓄有介活期开户');
	print(5,22,'卡    号:[19]',#ZKH);
	print(6,22,'户    名:[50]',#HM);
	print(6,22,'产品代码:[14]',#CPDM);
	print(6,22,'产品代码:[50]',#HM);
	print(6,22,'产品代码:[50]',#HM);
	print(6,22,'产品代码:[50]',#HM);
}"
</PRINT>
</RESPONSE>
