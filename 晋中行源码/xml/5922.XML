   <ITEM LINE="11"  COL="35" NAME="#JGHMNAME" INPUT="LABEL"  TYPE="%-30s" FUNCTIONS="V(NB)"/>
   <ITEM LINE="13"  COL="29" TYPE="%-8s"      NAME="#TXDAY"  INPUT="TEXT" FUNCTIONS="D()V(NB)">
