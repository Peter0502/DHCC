    if( fp2==NULL )
    {
        sprintf(acErrMsg," open file [%s] error ",filename2 );
        WRITEMSG
        strcpy( g_pub_tx.reply,"S047" );
        goto ErrExit;
    }

	ret = Zjgl_mst_Dec_Upd(g_pub_tx.reply,"intst_knd<>'0' and sts='1' \
	and opn_br_no in (select br_no from com_branch where wrk_sts<>'*' and br_type in ('3','4','5') and br_no!='10801' ) order by opn_br_no,acc_no");
	MYRETERR
	memset(ori_br_no,'\0',sizeof(ori_br_no));
	while(1)
	{
		ret = Zjgl_mst_Fet_Upd(&wd_zjgl_mst,g_pub_tx.reply);
		if(ret==100) break;
		MYRETERR
		if(i==0)
			strcpy(ori_br_no,wd_zjgl_mst.opn_br_no);
		if( memcmp(ori_br_no,wd_zjgl_mst.opn_br_no,strlen(ori_br_no)) ){
			vtcp_log("【%s】机构已计算完,开始记总帐\n",ori_br_no);
  			set_zd_long( DC_TRACE_CNT,++j);
			if(cal_zongzhang(ori_br_no,totamt))
				goto ErrExit;
			strcpy(ori_br_no,wd_zjgl_mst.opn_br_no);
			totamt=0;
		}

		vtcp_log("[%s][%s]初始 rate_type [%s]\n",wd_zjgl_mst.opn_br_no,wd_zjgl_mst.acc_no,wd_zjgl_mst.rate_type);
		ret = igD0290_Predata(&totamt);
		MYRETERR
		i++;
	}
	Zjgl_mst_Clo_Upd();
	vtcp_log("计最后一个机构【%s】的总帐\n",ori_br_no);
	if(cal_zongzhang(ori_br_no,totamt))
		goto ErrExit;

OkExit:
	sql_commit();	/*--提交事务--*/
	strcpy(g_pub_tx.reply,"0000");
	sprintf(acErrMsg,"计息结束[%s]",g_pub_tx.reply);
	WRITEMSG
	set_zd_data("0120",g_pub_tx.reply);
	return 0;
ErrExit:
	sql_rollback();	/*--事务回滚--*/
    if (strcmp(g_pub_tx.reply,"0000") == 0 || g_pub_tx.reply[0]=='\0')
        strcpy(g_pub_tx.reply,"G009");
	sprintf(acErrMsg,"计息!ERROR!!![%s]",g_pub_tx.reply);
	WRITEMSG
	set_zd_data("0120",g_pub_tx.reply);
	return 1;
}

int igD0290_Predata(double *totamt)
{
	  double dtxamt=0.0;
	  double davbal=0.0;
    struct S_pub_intst pub_intst;
    
    /** 计算利息,修改上次交易日 **/
    ret = pubf_base_zjgl_intst(&wd_zjgl_mst,&pub_intst);
	if(ret)
		return(ret);
    ret = Zjgl_mst_Upd_Upd(wd_zjgl_mst, g_pub_tx.reply);
	if(ret)
		return(ret);
 
    dtxamt = pub_intst.dealval+pub_intst.keepval-pub_intst.val;
	*totamt +=dtxamt;
	return(0);
}
