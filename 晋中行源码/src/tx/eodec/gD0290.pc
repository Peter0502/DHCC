  }
  set_zd_long( DC_TRACE_NO,g_pub_tx.trace_no );

  /** 初始化全局变量 **/
	ret = 0;
	pub_base_sysinit();

	ret=Com_sys_parm_Sel(g_pub_tx.reply,&com_sys_parm_c,"1=1");
	MYRETERR
	
	sprintf(acErrMsg,"计算一级准备金[%d]!",com_sys_parm_c.sys_date);
	WRITEMSG

	g_pub_tx.tx_date = com_sys_parm_c.sys_date;
	month=(g_pub_tx.tx_date/100)%100;
	switch(month){
		case 3:
			strcpy(jidu,"一");
			break;
		case 6:
			strcpy(jidu,"二");
			break;
		case 9:
			strcpy(jidu,"三");
			break;
		case 12:
			strcpy(jidu,"四");
			break;
	}

	/* 先建立清算中心的传票,下面再一个机构一个机构的往里写 */
	qingsuannum=1;
    memset(filename2,0x0,sizeof(filename2));
