	sql_rollback();	/*--事务回滚--*/
	sprintf(acErrMsg,"生成网点计息清单失败!!!![%s]",g_pub_tx.reply);
	WRITEMSG
	set_zd_data("0120",g_pub_tx.reply);
	return 1;
}

