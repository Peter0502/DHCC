			if( (fp=fopen(cCommand,"a+"))==NULL )
 		        {
 		        	vtcp_log("[%s][%d]目录不存在，%s \n",__FILE__,__LINE__,cCommand);
 				sprintf( cCommand,"%s/report/%s",getenv("HOME"),tCom_branch.br_no );
 				mkdir( cCommand, S_IRWXU|S_IRWXG|S_IRWXO);
        			sprintf( cCommand,"%s/report/%s/%s.txt",getenv("HOME"),tCom_branch.br_no,filename);

 			       	if( (fp=fopen( cCommand,"a+"))==NULL  )
