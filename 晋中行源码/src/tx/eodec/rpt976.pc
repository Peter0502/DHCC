rpt976()
{
EXEC SQL BEGIN DECLARE SECTION;
	long intst_date1=0;
	long intst_date2=0;
EXEC SQL END DECLARE SECTION;
	int ttlnum;
	char fname[100];
	char filename[100];
	char cCommand[100];
	memset(cCommand,0x00,sizeof(cCommand));
	
	char old_br_no[6];
	strcpy( old_br_no , "*****" );

	memset( &s_com_sys_parm , 0x00 , sizeof(struct com_sys_parm_c));
	memset( &tCom_branch , 0x00 , sizeof(struct com_branch_c));
	ret=sql_begin(); /*打开事务*/
	if(ret != 0)
	{
		sprintf( acErrMsg, "打开事务失败!!!" );
		WRITEMSG
		goto ErrExit;
	}
	/**------- 初始化全局变量 --------**/
		pub_base_sysinit();
/*	strcpy( filename , "BJwdjxqd" );	
	strcpy(vpfm, "wdjxqd" );*/
	strcpy( filename , "RPT976" );	
	strcpy(vpfm, "RPT976" );
	/***change by liuyue ,原来只是在总行机构中出这个报表***
	EXEC SQL select rowid,com_branch.* into :tCom_branch from com_branch where br_type in ('4','5') ;
	ERR_DEAL
	*******/
	
	ret = Com_branch_Dec_Sel(g_pub_tx.reply,"br_type in ('4','5')  order by br_no");
	ERR_DEAL1
	
	
	while(1)
	{
		ret = Com_branch_Fet_Sel(&tCom_branch,g_pub_tx.reply);
		vtcp_log("[%s][%d]ret====[%d]\n",__FILE__,__LINE__,ret);
		if(ret==100)
			break;
		else if(ret && ret !=100)
			ERR_DEAL1
		
			
        	vtcp_log("[%s][%d]现在开始机构[%s]的处理!\n",__FILE__,__LINE__,tCom_branch.br_no);
        	
        	
		
		line_file=1;
		
		
		/* 机构变换时 */
		pub_base_strpack( tCom_branch.br_no );
		if( strcmp( tCom_branch.br_no , old_br_no ) )
		{
			line_file=1;
			/* 第一个机构 */
			if( strcmp( old_br_no , "*****" ) )
			{
				fclose(fp);
			}
			
			strcpy( old_br_no , tCom_branch.br_no );
			
			page=1;
			line_file=0;
			ttlnum=0;
			
			/* 删除原文件 */
			memset(cCommand,0x00,sizeof(cCommand));
			sprintf( cCommand,"rm -f %s/report/%s/%s.txt",getenv("HOME"),tCom_branch.br_no,filename);
			
			
			vtcp_log("[%s][%d]创建删除文件的命令=[%s]\n",__FILE__,__LINE__,cCommand);
