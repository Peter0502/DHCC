int Hvstat_Ins( struct hvstat_c hvstat_c , char * reply ){
	int ret;

	EXEC SQL INSERT INTO hvstat VALUES (:hvstat_c.tx_date,
			:hvstat_c.stat,
			:hvstat_c.chflag,
			:hvstat_c.message,
			:hvstat_c.filler1,
			:hvstat_c.filler2);
	if ( sqlca.sqlcode && sqlca.sqlcode != -1 )
	{
		sprintf(acErrMsg,"INSERT hvstat error %d",sqlca.sqlcode);
		WRITEMSG
		strcpy ( reply , "D107" );
		return CM_SQLCODE;
	}
	else if ( sqlca.sqlcode == -1 )
	{
		sprintf(acErrMsg,"INSERT hvstat error %d",sqlca.sqlcode);
		WRITEMSG
		strcpy ( reply , "D108" );
		return CM_SQLCODE;
	}

	return 0;
}
