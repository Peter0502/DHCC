/*****************************************************************************/
/****                              查询函数部分[]                       ****/
/*****************************************************************************/
int Hvstat_Sel(reply,hvstat_c,fmtstr,va_alist)
char    *reply;
struct  hvstat_c *hvstat_c;
char    *fmtstr;
va_dcl
{
	int   ret;
	char    wherelist[800];

	va_list ap;
	va_start(ap);
	vsprintf ( wherelist , fmtstr , ap );
	va_end(ap);

	ret = Hvstat_Dec_Sel( reply , "%s" , wherelist );
	if (ret){
		WRITEMSG
		return ret;
	}
	ret = Hvstat_Fet_Sel( hvstat_c , reply );
	if (ret){
		WRITEMSG
		return ret;
	}

	Hvstat_Clo_Sel();

	return 0;
}



char *key_strcat(char *,char *);
int Hvstat_Dec_Sel ( reply , fmtstr , va_alist )
char    *reply;
char    *fmtstr;
va_dcl
{
	EXEC    SQL BEGIN   DECLARE SECTION;
		char    comm[1000];
	EXEC    SQL END     DECLARE SECTION;
	char    wherelist[800];

	va_list ap;
	va_start(ap);
	vsprintf ( wherelist , fmtstr , ap );
	va_end(ap);

	sprintf ( comm ," SELECT rowid,hvstat.* FROM hvstat WHERE  ");
	key_strcat(comm,wherelist);

	vtcp_log("%s,%d,SQLSTR=[%s]\n",__FILE__,__LINE__,comm);
	sqlca.sqlcode=0;
	EXEC SQL PREPARE hvstat_sel FROM :comm;
	EXEC SQL DECLARE sel_hvstat CURSOR FOR hvstat_sel;

	EXEC SQL OPEN sel_hvstat;
	if (sqlca.sqlcode){
		sprintf(acErrMsg,"OPEN hvstat error %d",sqlca.sqlcode);
		WRITEMSG
		strcpy ( reply , "D102" );
		return CM_SQLCODE;
	}

	return 0;
}

int Hvstat_Fet_Sel ( struct hvstat_c *hvstat_c , char * reply )
{

	int   ret;

	EXEC SQL FETCH sel_hvstat INTO :hvstat_c;
	if (sqlca.sqlcode&&sqlca.sqlcode!=1403){
		sprintf(acErrMsg,"Fetch hvstat error!!! %d",sqlca.sqlcode);
		WRITEMSG
		strcpy (reply,"D103");
		return CM_SQLCODE;
	}
	else if ( sqlca.sqlcode == 1403 ){
		sprintf(acErrMsg,"Fetch hvstat finished!!! %d",sqlca.sqlcode);
		WRITEMSG
		strcpy (reply,"D104");
		return CM_SQLCODE;
	}
	zip_struct(hvstat_c);

	return 0;
}

int Hvstat_Clo_Sel (){
	EXEC SQL CLOSE sel_hvstat;
	return 0;
}

